<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
>
    <Dialog title="Yeni Kalem Ekle">
        <content>
            <smartForm:SmartForm editable="true">
                <smartForm:Group>
                    <smartForm:GroupElement label="Ürün Kodu">
                        <smartField:SmartField value="{ProductCode}" />
                    </smartForm:GroupElement>
                    <smartForm:GroupElement label="Renk">
                        <smartField:SmartField value="{ProductColor}" />
                    </smartForm:GroupElement>
                    <smartForm:GroupElement label="Adet">
                        <smartField:SmartField value="{Quantity}" />
                    </smartForm:GroupElement>
                    <smartForm:GroupElement label="Fiyat">
                        <smartField:SmartField value="{ItemPrice}" />
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
        </content>
        <beginButton>
            <Button
                text="Ekle"
                type="Emphasized"
                press=".onConfirmAddItem"
            />
        </beginButton>
        <endButton>
            <Button
                text="İptal"
                press=".onCancelAddItem"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
